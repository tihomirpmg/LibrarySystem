@page "/sections"
@using LibrarySystem.Models
@using LibrarySystem.Business.Repos
@inject ITitleRepository TitleRepository
@attribute [Authorize]

<div class="row mt-4">
    <div class="col-12">

        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        SectionName
                        <br />
                        <select name="sections" id="sections">
                            <option>---Select---</option>
                            <option value="Horror">Horror</option>
                            <option value="Fantasy">Fantasy</option>
                            <option value="Biography">Biography</option>
                            <option value="Philosophical Literature">Philosophical Literature</option>
                            <option value="Comedy">Comedy</option>
                            <option value="Encyclopedia">Encyclopedia</option>
                        </select>
                    </th>
                    <th>Name</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @if (Titles.Any())
                {
                    foreach (var book in Titles)
                    {
                        <tr>
                            <td>@book.Section</td>
                            <td>@book.Name</td>
                            <td>@book.Description</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>